<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 背景颜色 -->
    <solid android:color="#eb4b4b" />

    <!-- 设置边距 -->
    <padding
            android:bottom="1dp"
            android:left="10dp"
            android:right="10dp"
            android:top="1dp" />

    <!-- 控制边界线颜色和大小 -->
    <stroke
            android:width="1dp"
            android:color="#ef5953" />

    <!-- 控制圆角大小 -->
    <corners android:radius="5dp" />

</shape>